@model List<App.ViewModels.Orders.OrderViewModel>

<div id="accordion">
    @for(var i=0; i< Model.Count;i++)
    {
        string id = "collapse" + @i.ToString();
        <div class="card">
            <div class="card-header">
                <h5>
                    <a href="#@id" data-parent="#accordion" data-toggle="collapse">
                        Order No @Model[i].Id
                    </a>
                </h5>
            </div>
            <div id="@id" class="collapse">
                <div class="card-body">
                    <p><strong>Date: </strong>@Model[i].Date</p>
                    <p><strong>Invoice Number:</strong> @Model[i].InvoiceNumber</p>
                    <p><strong>Total Price: </strong> @Model[i].TotalPrice</p>
                    <table class="table mt-4">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Item Price</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model[i].Products)
                            {
                                <tr>
                                    <td>@product.ProductName</td>
                                    <td>@product.Price</td>
                                    <td>@product.Quantity</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>